generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id             String       @id @default(cuid())
  title          String
  description    String
  frequency      String?
  category       CategoryType
  host           String
  reference      String
  targetDonation Int?
  mainImage      String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  survey         Survey[]
  tickets        Ticket[]
}

model Ticket {
  id          String   @id @default(cuid())
  name        String?
  price       Int?
  quantity    Int?
  description String?
  eventId     String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  Event       Event?  @relation(fields: [eventId], references: [id])
}

model Survey {
  id        String     @id @default(cuid())
  type      SurveyType
  question  String
  options   String[]
  eventId   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Event     Event      @relation(fields: [eventId], references: [id])
}

enum SurveyType {
  short_answer
  paragraph
  multiple_choice
  checkboxes
}

enum CategoryType {
  premium
  general
  infaq
  preview
}
