generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id             String       @id @default(cuid())
  title          String
  description    String
  frequency      String?
  category       CategoryType
  host           HostType
  reference      String
  targetDonation Int?
  mainImage      String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  survey         Survey[]
  tickets        Ticket[]
}

model Ticket {
  id          String   @id @default(cuid())
  order       Int
  name        String?
  price       Int?
  quantity    Int?
  description String?
  eventId     String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  Event       Event?   @relation(fields: [eventId], references: [id])
}

model Survey {
  id        String     @id @default(cuid())
  order     Int
  type      SurveyType
  question  String
  options   String[]
  eventId   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Event     Event      @relation(fields: [eventId], references: [id])
}

enum HostType {
  PKAM
  TURATH
}

enum SurveyType {
  SHORT_ANSWER
  PARAGRAPH
  MULTIPLE_CHOICE
  CHECKBOXES
}

enum CategoryType {
  PREMIUM
  GENERAL
  INFAQ
  PREVIEW
}
